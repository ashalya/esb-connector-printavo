<component name="printavo-customer" type="synapse/template">
   <subComponents>
      <component name="createCustomer">
         <file>createCustomer.xml</file>
         <description>Create a new customer in Printavo account using the provided Parameters.</description>
      </component>
      <component name="getCustomer">
         <file>getCustomer.xml</file>
         <description>Retrieve details of a customer identified by the provided customer ID.</description>
      </component>
      <component name="listCustomers">
         <file>listCustomers.xml</file>
         <description>Retrieve a list of customers from Printavo account.</description>
      </component>
      <component name="updateCustomer">
         <file>updateCustomer.xml</file>
         <description>Update details of the customer identified by the provided customer ID.</description>
      </component>
   </subComponents>
</component>
